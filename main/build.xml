<project name="AndOrm" default="build" basedir=".">

	<property name="src" location="src"/>
	<property name="build" location="build"/>
	<property name="src_dist" value="dist"/>
	<property name="version" value="0.0.1"/>
	
	<target name="init">
		<echo>making dir build</echo>

		<mkdir dir="${build}"/>
	</target>

	<target name="compile" depends="init">
		<echo>compiling classes</echo>

		<javac srcdir="${src}" destdir="${build}"/>
	</target>

	<target name="build" depends="compile">
		<echo>building files</echo>

		<mkdir dir="${src_dist}"/>

		<jar jarfile="${src_dist}/AndOrm-${version}.jar"/>
	</target>

	<target name="clean" depends="build">
		<echo>cleaning build directory</echo>

		<delete dir="${build}"/>
	</target>

</project>
